<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PreferenceStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/margin</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
    </style>

    <style name="reihenStyle" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/card_border</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">70dp</item>
        <item name="android:textAlignment">center</item>

        <item name="android:padding">70dp</item>
        <item name="android:layout_margin">@dimen/margin</item>

    </style>

</resources>
