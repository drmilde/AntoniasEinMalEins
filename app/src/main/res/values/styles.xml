<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PreferenceStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/margin</item>
        <item name="android:padding">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
    </style>

    <style name="tableListStyle" parent="@android:style/Widget.ListView">
        <item name="android:background">@drawable/card_border</item>
    </style>

    <style name="reihenStyle" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/card_border</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textAlignment">center</item>

        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">35dp</item>
        <item name="android:paddingBottom">35dp</item>
        <item name="android:layout_margin">2dp</item>

    </style>

    <style name="buttonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/card_border</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>

        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>

    </style>


</resources>
