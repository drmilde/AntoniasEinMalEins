<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/antonia_jakob"


    tools:context="com.example.milde.antoniaseinmaleins.RechenFlipActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="0 Punkte"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingRight="0dp"
            android:text="10 Sekunden"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        >


        <Button
            android:id="@+id/btnFalseWeiter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/control_button_height"
            android:layout_marginRight="5dp"
            android:background="@color/colorAccent"
            android:layout_weight="0.5"
            android:text=" "
            android:textSize="20sp" />


        <Button
            android:id="@+id/btnWeiter"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/control_button_height"
            android:background="@color/settingsBackground"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:text=" "
            android:textSize="20sp" />



    </LinearLayout>

    <Button
        android:id="@+id/btnNochmal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:enabled="false"
        android:text="Nochmal" />


</LinearLayout>
